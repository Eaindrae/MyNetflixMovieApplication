<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@drawable/bg_gradient"
        android:padding="@dimen/margin_medium">

    <ImageView
            android:id="@+id/iv_bg_poseter_detail"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/bg_blur"
            android:scaleType="centerCrop"/>

    <ImageButton

            android:id="@+id/btn_cross"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/round_button"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_large"/>
    <!--<androidx.core.widget.NestedScrollView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent">-->

    <LinearLayout
            android:id="@+id/linear1"
            android:layout_below="@id/btn_cross"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="390dp">
        <ImageView

                android:id="@+id/iv_poster_detail"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/nikki"
                android:textAlignment="center"
        />
        <RelativeLayout
                android:id="@+id/relate1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="@dimen/margin_small">


            <ImageButton

                    android:id="@+id/btn_plain1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/plain_round_btn"
            />

            <TextView

                    android:layout_toEndOf="@id/btn_plain1"
                    android:id="@+id/tv_year"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="2019"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:textColor="@color/whitecolor"
                    android:textSize="@dimen/text_regular_3x"/>
            <TextView

                    android:layout_toEndOf="@id/tv_year"
                    android:id="@+id/tv_eighteen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="18+"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:textColor="@color/whitecolor"
                    android:textSize="@dimen/text_regular_3x" android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"/>
            <TextView

                    android:layout_toEndOf="@id/tv_eighteen"
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="1hr 3m"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:textColor="@color/whitecolor"
                    android:textSize="@dimen/text_regular_3x"/>
        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
                android:layout_below="@+id/relate1"
                android:id="@+id/btn_play"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:layout_marginEnd="@dimen/margin_medium"
                android:backgroundTint="@android:color/holo_red_dark"
                android:text="Play"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_regular_2x"
                app:icon="@drawable/ic_play_arrow_black_24dp"
                app:iconGravity="textStart"
                app:iconTint="@android:color/white" />


        <!--<TextView-->
                <!--android:id="@+id/tv_detail_description"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="@string/tv_description"-->
                <!--android:textColor="@color/whitecolor"-->
                <!--android:textSize="@dimen/text_regular"/>-->
        <!--<ImageButton-->

                <!--android:id="@+id/btn_plain2"-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="@dimen/margin_small"-->
                <!--android:background="@drawable/plain_round_btn"-->
        <!--/>-->
    </LinearLayout>
    <LinearLayout
            android:layout_below="@id/linear1"
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:weightSum="3">
        <RelativeLayout

                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
        >
            <ImageView
                    android:id="@+id/iv_mylist"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:src="@drawable/ic_add_black_24dp"
                    android:textAlignment="center"
            />
            <TextView
                    android:layout_below="@id/iv_mylist"
                    android:id="@+id/tv_mylist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/whitecolor"
                    android:textSize="@dimen/text_small"
                    android:text="MyList"
                    android:textAlignment="center"
                    android:textAllCaps="false"/>
        </RelativeLayout>

        <RelativeLayout

                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
        >
            <ImageView
                    android:id="@+id/iv_rate"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:src="@drawable/ic_thumb_up_black_24dp"
                    android:textAlignment="center"
            />
            <TextView
                    android:layout_below="@id/iv_rate"
                    android:id="@+id/tv_rate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/whitecolor"
                    android:textSize="@dimen/text_small"
                    android:text="Rate"
                    android:textAlignment="center"
                    android:textAllCaps="false"/>
        </RelativeLayout>
        <ImageButton
                android:layout_weight="1.6"
                android:id="@+id/btn_plain3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/plain_round_btn"
                android:padding="@dimen/text_heading_1x"
        />


    </LinearLayout>
    <View
            android:layout_below="@id/linear2"
            android:id="@+id/View"
            android:layout_width="150dp"
            android:layout_height="5dp"
            android:layout_alignEnd="@id/tv_detail_title"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:background="@android:color/holo_red_dark" />

    <TextView
            android:layout_below="@id/View"
            android:id="@+id/tv_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More Like This"
            android:textColor="@color/whitecolor"
            android:textSize="@dimen/text_heading_1x"/>
    <!--<ImageButton-->
          <!--android:layout_toEndOf="@id/tv_detail_title"-->
          <!--android:layout_below="@id/linear2"-->
            <!--android:id="@+id/btn_plain4"-->
            <!--android:layout_width="140dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_marginTop="@dimen/margin_small"-->
            <!--android:background="@drawable/plain_round_btn"-->
    <!--/>-->
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_detail"
            android:layout_below="@id/tv_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>